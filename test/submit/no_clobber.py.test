from ghstack.test_prelude import *

init_test()

# Check that we don't clobber changes to PR description or title

write_file_and_add("b", "asdf")
git("commit", "-m", "Commit 1\n\nOriginal message")
tick()
gh_submit("Initial 1")
tick()

get_github().patch(
    "repos/pytorch/pytorch/pulls/500",
    body="""\
Stack:
* **#500 Commit 1**

Directly updated message body""",
    title="Directly updated title",
)

if is_direct():
    assert_github_state(
        """\
        [O] #500 Directly updated title (gh/ezyang/1/head -> master)

            Stack:
            * **#500 Commit 1**

            Directly updated message body

            * 6c1d876 Initial 1

        Repository state:

            * 6c1d876 (gh/ezyang/1/next, gh/ezyang/1/head)
            |    Initial 1
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Directly updated title (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * **#500 Commit 1**

            Directly updated message body

            * 20ec3e0 Initial 1

        Repository state:

            * 20ec3e0 (gh/ezyang/1/head)
            |    Initial 1
            * 3e4048c (gh/ezyang/1/base)
                 Initial 1 (base update)
        """
    )

write_file_and_add("file1.txt", "A")
git("commit", "--amend", "--no-edit")
tick()
gh_submit("Update 1")
tick()

if is_direct():
    assert_github_state(
        """\
        [O] #500 Directly updated title (gh/ezyang/1/head -> master)

            Stack:
            * __->__ #500

            Directly updated message body

            * 3c9d67f Update 1
            * 6c1d876 Initial 1

        Repository state:

            * 3c9d67f (gh/ezyang/1/next, gh/ezyang/1/head)
            |    Update 1
            * 6c1d876
            |    Initial 1
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Directly updated title (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * __->__ #500

            Directly updated message body

            * 4300988 Update 1
            * 20ec3e0 Initial 1

        Repository state:

            * 4300988 (gh/ezyang/1/head)
            |    Update 1
            * 20ec3e0
            |    Initial 1
            * 3e4048c (gh/ezyang/1/base)
                 Initial 1 (base update)
        """
    )
