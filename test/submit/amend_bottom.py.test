from ghstack.test_prelude import *

init_test()

commit("A")
(A,) = gh_submit("Initial 1")
commit("B")
A2, B2 = gh_submit("Initial 2")

checkout(A2)
amend("A3")
(A3,) = gh_submit("Update A")

cherry_pick(B2)
A4, B4 = gh_submit("Update B")

if is_direct():
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> master)

            This is commit A

            * 014ce24 Update A
            * 8c7d059 Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/1/head)

            This is commit B

            * f7f05ff Update B
            * 0243aa2 Initial 2

        Repository state:

            *   f7f05ff (gh/ezyang/2/next, gh/ezyang/2/head)
            |\\     Update B
            | * 014ce24 (gh/ezyang/1/next, gh/ezyang/1/head)
            | |    Update A
            * | 0243aa2
            |/     Initial 2
            * 8c7d059
            |    Initial 1
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * #501
            * __->__ #500

            This is commit A

            * 414cdf2 Update A
            * 36fcfdf Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/2/base)

            Stack:
            * __->__ #501
            * #500

            This is commit B

            * c11f047 Update B
            * cfc0530 Initial 2

        Repository state:

            *   c11f047 (gh/ezyang/2/head)
            |\\     Update B
            | * 7c6b228 (gh/ezyang/2/base)
            | |    Update B (base update)
            * | cfc0530
            |/     Initial 2
            * bf457db
            |    Initial 2 (base update)
            * 8b023bd
            |    Commit A
            | * 414cdf2 (gh/ezyang/1/head)
            | |    Update A
            | * 36fcfdf
            | |    Initial 1
            | * 5a32949 (gh/ezyang/1/base)
            |/     Initial 1 (base update)
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """,
    )
