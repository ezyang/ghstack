from ghstack.test_prelude import *

init_test()

write_file_and_add("file1.txt", "A")
git(
    "commit",
    "-m",
    """This is my commit

* It starts with a fabulous
* Bullet list""",
)
tick()
gh_submit("Initial")

if is_direct():
    assert_github_state(
        """\
        [O] #500 This is my commit (gh/ezyang/1/head -> master)

            * It starts with a fabulous
            * Bullet list

            * b167219 Initial

        Repository state:

            * b167219 (gh/ezyang/1/next, gh/ezyang/1/head)
            |    Initial
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 This is my commit (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * __->__ #500

            ----

            * It starts with a fabulous
            * Bullet list

            * 6ee2f33 Initial

        Repository state:

            * 6ee2f33 (gh/ezyang/1/head)
            |    Initial
            * 4e54cdd (gh/ezyang/1/base)
                 Initial (base update)
        """
    )

ok()
