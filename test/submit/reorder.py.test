from ghstack.test_prelude import *

init_test()

commit("A")
commit("B")
A, B = gh_submit("Initial")

checkout(GitCommitHash("HEAD~~"))
cherry_pick(B)
cherry_pick(A)
B2, A2 = gh_submit("Reorder")

if is_direct():
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> gh/ezyang/2/head)

            This is commit A

            * f61b335 Reorder

        [O] #501 Commit B (gh/ezyang/2/head -> master)

            This is commit B

            * d5456ba Reorder
            * 14761ce Initial
            * 92a6dc7 Initial

        Repository state:

            *   f61b335 (gh/ezyang/1/next, gh/ezyang/1/head)
            |\\     Reorder
            | * d5456ba (gh/ezyang/2/next, gh/ezyang/2/head)
            | |    Reorder
            | * 14761ce
            |/     Initial
            * 92a6dc7
            |    Initial
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * __->__ #500
            * #501

            This is commit A

            * 56b24a9 Reorder
            * 4afba7b Initial

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/2/base)

            Stack:
            * #500
            * __->__ #501

            This is commit B

            * a9a3f2b Reorder
            * f420265 Initial

        Repository state:

            *   56b24a9 (gh/ezyang/1/head)
            |\\     Reorder
            | * d4668d1 (gh/ezyang/1/base)
            | |    Reorder (base update)
            * | 4afba7b
            |/     Initial
            * 13c3cb3
            |    Initial (base update)
            | *   a9a3f2b (gh/ezyang/2/head)
            | |\\     Reorder
            | | * 6d3e372 (gh/ezyang/2/base)
            | | |    Reorder (base update)
            | * | f420265
            | |/     Initial
            | * 8e45110
            | |    Initial (base update)
            | * c5f6953
            |/     Commit A
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
