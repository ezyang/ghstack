from ghstack.test_prelude import *

init_test()

commit("A")
gh_submit("Initial 1")

commit("B")
A2, B2 = gh_submit("Initial 2")

checkout(A2)
amend("A3")
cherry_pick(B2)
amend("B3")
A3, B3 = gh_submit("Update A")

if is_direct():
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> master)

            This is commit A

            * 60bc096 Update A
            * 8c7d059 Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/1/head)

            This is commit B

            * 797401a Update A
            * 0243aa2 Initial 2

        Repository state:

            *   797401a (gh/ezyang/2/next, gh/ezyang/2/head)
            |\\     Update A
            | * 60bc096 (gh/ezyang/1/next, gh/ezyang/1/head)
            | |    Update A
            * | 0243aa2
            |/     Initial 2
            * 8c7d059
            |    Initial 1
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * #501
            * __->__ #500

            This is commit A

            * 3bc91e8 Update A
            * 36fcfdf Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/2/base)

            Stack:
            * __->__ #501
            * #500

            This is commit B

            * 3fb0bed Update A
            * cfc0530 Initial 2

        Repository state:

            * 3bc91e8 (gh/ezyang/1/head)
            |    Update A
            * 36fcfdf
            |    Initial 1
            * 5a32949 (gh/ezyang/1/base)
            |    Initial 1 (base update)
            | *   3fb0bed (gh/ezyang/2/head)
            | |\\     Update A
            | | * edd4564 (gh/ezyang/2/base)
            | | |    Update A (base update)
            | * | cfc0530
            | |/     Initial 2
            | * bf457db
            | |    Initial 2 (base update)
            | * 8b023bd
            |/     Commit A
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
