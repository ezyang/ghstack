from ghstack.test_prelude import *

init_test()

commit("A")
(A,) = gh_submit("Initial 1")

# Just to test what happens if we use those branches
git("checkout", "gh/ezyang/1/orig")
commit("B")
gh_submit("Initial 2")

if is_direct():
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> master)

            This is commit A

            * 8c7d059 Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/1/head)

            This is commit B

            * 0243aa2 Initial 2

        Repository state:

            * 0243aa2 (gh/ezyang/2/next, gh/ezyang/2/head)
            |    Initial 2
            * 8c7d059 (gh/ezyang/1/next, gh/ezyang/1/head)
            |    Initial 1
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """
    )
else:
    assert_github_state(
        """\
        [O] #500 Commit A (gh/ezyang/1/head -> gh/ezyang/1/base)

            Stack:
            * #501
            * __->__ #500

            This is commit A

            * 36fcfdf Initial 1

        [O] #501 Commit B (gh/ezyang/2/head -> gh/ezyang/2/base)

            Stack:
            * __->__ #501
            * #500

            This is commit B

            * cfc0530 Initial 2

        Repository state:

            * cfc0530 (gh/ezyang/2/head)
            |    Initial 2
            * bf457db (gh/ezyang/2/base)
            |    Initial 2 (base update)
            * 8b023bd
            |    Commit A
            | * 36fcfdf (gh/ezyang/1/head)
            | |    Initial 1
            | * 5a32949 (gh/ezyang/1/base)
            |/     Initial 1 (base update)
            * dc8bfe4 (HEAD -> master)
                 Initial commit
        """,
    )

ok()
